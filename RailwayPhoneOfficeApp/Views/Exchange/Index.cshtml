@model IEnumerable<RailwayPhoneOfficeApp.Models.ExchangeIndexViewModel>

<h1>Exchanges</h1>

<a asp-action="Create" class="btn btn-success mb-3">Add New Exchange</a>

<div class="container mt-4">
    <div class="row g-4">
        @foreach (var exchange in Model)
        {
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">                        
                        <h5 class="card-title">@exchange.Name</h5>
                        <h6 class="card-title">@exchange.Capacity</h6>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>







